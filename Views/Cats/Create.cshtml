@model FindKočka.Models.Cat

@{
    ViewData["Title"] = "Create";
}

<style type="text/css">
    body {
        background: linear-gradient(to left, rgb(246, 211, 101), rgb(253, 160, 133));
        margin: 0;
    }
</style>

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4 profile" style="width: 30rem;">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <span asp-validation-for="Age" class="text-danger"></span>
                <input asp-for="Age" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descriprion</label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Image</label>
                <span asp-validation-for="Image" class="text-danger"></span>
                <input asp-for="Image" class="form-control" accept="image/*">
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}