@model FindKočka.Models.Cat

@{
    ViewData["Title"] = "Delete";
}

<style type="text/css">
    body {
        background: linear-gradient(to left, rgb(246, 211, 101), rgb(253, 160, 133));
        margin: 0;
    }
</style>

<h1 class="text-center">Delete</h1>

<h2 class="text-center">Are you sure you want to delete this?</h2>

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4 profile" style="width: 30rem;">
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <img src="@("../../image/" + @Html.ValueFor(model => model.ImageName))" class="card-img-top" />
            <span class="name mt-3"><h1>@Html.DisplayFor(model => model.Name)</h1></span>
            <div class="d-flex flex-row justify-content-center align-items-center mt-3"> <span class="number"><span class="follow">Age </span>@Html.DisplayFor(model => model.Age)</span> </div>
            <div class="mt-3"> <span>@Html.DisplayFor(model => model.Description)</span> </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Details" asp-route-id="@Model.Id" type="button" class="btn btn-outline-primary">Back</a>
            </form>
        </div>
    </div>
</div>