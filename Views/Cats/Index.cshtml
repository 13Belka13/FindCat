
@model IEnumerable<FindKočka.Models.Cat>
@{ ViewData["Title"] = "Index"; }

@if (Model.Count() != 0)
{
<div class="container">
    <div class="row" data-masonry='{"percentPosition": true }'>
        @foreach (var item in Model)
        {
<div class="col-4">
    <div class="card">
        <img src="@("image/" + item.ImageName)" class="card-img-top" alt="Cat">
        <div class="card-body">
            <h2 class="card-title text-uppercase">@Html.DisplayFor(modelItem => item.Name)</h2>
            <p class="card-text fs-5">@Html.DisplayFor(modelItem => item.Description)</p>
            <h6 class="card-subtitle mb-2 text-muted"><u>@Html.DisplayFor(modelItem => item.OwnerName)</u> is the owner of this cat</h6>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn">Read more</a>
        </div>
    </div>
</div>}
    </div>
</div>}
@if (Model.Count() == 0)
{
@section fullscreen
{

        <div>
            <div class="main-img">
                <div class="container" style="margin-top: 100px">
                    <div class="row">
                        <div class="col-xs-12 col-md-12 text-light text-center">
                            <h2>Here you will see all available cats</h2>
                            <h4>Nobody has added their pets yet</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

}}
